# Auth0 Configuration for Single-Tenant Internal App
# Copy this to .env and fill in your values

# Your Auth0 domain
AUTH0_DOMAIN=dev-xxxxx.us.auth0.com

# Client ID for THIS specific internal app (create a separate app in Auth0)
AUTH0_CLIENT_ID=your-internal-app-client-id

# Client Secret for this app
AUTH0_CLIENT_SECRET=your-internal-app-client-secret

# The specific organization this app serves (get from Auth0 Organizations)
AUTH0_ORGANIZATION_ID=org_abc123xyz

# Callback URL - update for production
AUTH0_CALLBACK_URL=http://localhost:3001/api/auth/callback

# Session secret (generate with: openssl rand -base64 32)
AUTH0_SESSION_SECRET=your-session-secret-min-32-chars

# Public URL for this app (for production)
PUBLIC_APP_URL=http://localhost:3001
